<div class="max-w-4xl mx-auto my-10 p-6 bg-white shadow-lg rounded-lg">
  <h2 class="text-2xl font-semibold mb-6">My Account</h2>
  <p class="mb-6">Hello, <strong>{{ customer.first_name }}</strong></p>

  <h3 class="text-xl font-medium mb-4">Order History</h3>
  {% if customer.orders.size > 0 %}
    <ul class="space-y-4">
      {% for order in customer.orders %}
        <li class="border-b pb-2">
          <span class="block font-semibold">Order #{{ order.name }}</span>
          <span>Total: {{ order.total_price | money }}</span><br>
          <span>Date: {{ order.created_at | date: "%B %d, %Y" }}</span>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>You have no orders.</p>
  {% endif %}

  <!-- <a href="{{ routes.account_logout_url }}" class="mt-6 inline-block bg-red-600 hover:bg-red-700 text-white py-2 px-4 rounded">
    Log out
  </a> -->
</div>
